                }
            },
            "required": [
                "artefacts"
            ],
            "title": "Ksql"
        },
        "Artefacts": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "streams": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/TableElement"
                    }
                },
                "tables": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/TableElement"
                    }
                }
            },
            "required": [
                "streams",
                "tables"
            ],
            "title": "Artefacts"
        },
        "TableElement": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "path": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                }
            },
            "required": [
                "name",
                "path"
            ],
            "title": "TableElement"
        },
        "KStreams": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "principal": {
                    "type": "string"
                },
                "topics": {
                    "$ref": "#/definitions/Topics"
                },
                "applicationId": {
                    "type": "string"
                }
            },
            "required": [
                "principal",
                "topics"
            ],
            "title": "KStreams"
        },
        "Topic": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "config": {
                    "$ref": "#/definitions/Config"
                },
                "dataType": {
                    "type": "string"
                }
            },
            "required": [
                "config",
                "name"
            ],
            "title": "Topic"
        },
        "Config": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "replication.factor": {
                    "type": "string",
                    "format": "integer"
                },
                "num.partitions": {
                    "type": "string",
                    "format": "integer"
                }
            },
            "title": "Config"
        }
    }
}
